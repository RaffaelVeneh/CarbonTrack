# Database Configuration
DB_HOST=your_database_host
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=your_database_name
DB_PORT=3306

# JWT Secret
JWT_SECRET=your_jwt_secret_key

# Redis Configuration (for token blacklist and user status cache)
# LOCAL (Docker): redis://localhost:6379 with password
# PRODUCTION (Upstash): Get from https://console.upstash.com/redis
# Example Upstash URL: rediss://:password@region-redis.upstash.io:6379
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_password

# Email Service (for verification and password reset)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS and email links)
CLIENT_URL=http://localhost:3000
